<Window 
    x:Class="WPF_Page.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WPF_Page"
    mc:Ignorable="d"
    Title="MainWindow" 
    Height="450" 
    Width="800"
    WindowStartupLocation="CenterScreen"
    FontSize="16">
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel>

            <Button
                x:Name="btnHomerseklet"
                Margin="10 20 10 0"
                Content="Hőmérséklet váltás" 
                Click="BtnHomerseklet_Click"/>

            <Button
                x:Name="btnTorleszto"
                Margin="10 20 10 0"
                Content="Havi törlesztő"
                Click="BtnTorleszto_Click"/>

            <Button
                x:Name="btnJegyrendeles"
                Margin="10 20 10 0"
                Content="Jegyrendelés"
                Click="BtnJegyrendeles_Click"/>

        </StackPanel>

        <Frame 
            NavigationUIVisibility="Hidden"
            Grid.Column="1"
            x:Name="frmMain"/>

    </Grid>
    
</Window>
